
{
  "name": "byakuya-md",
  "version": "1.5.0",
  "description": "A multi-device WhatsApp bot with otaku-themed features using pairing code authentication",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "pair": "node index.js --pairing",
    "clean": "rm -rf auth_info && npm start",
    "clean:win": "rmdir /s /q auth_info && npm start",
    "reset": "rm -rf auth_info node_modules package-lock.json && npm install",
    "reset:win": "rmdir /s /q auth_info node_modules && del package-lock.json && npm install",
    "test": "echo \"Testing bot functionality...\" && node -e \"console.log('âœ… Basic test passed');\"",
    "setup": "npm install && npm run clean",
    "setup:win": "npm install && npm run clean:win",
    "logs": "tail -f logs/bot.log",
    "logs:win": "type logs\\bot.log",
    "help": "echo \"Available commands: npm start, npm run clean, npm run reset, npm run dev\"",
    "docker:build": "docker build -t byakuya-md .",
    "docker:run": "docker run -d --name byakuya-md -v $(pwd)/auth_info:/app/auth_info byakuya-md",
    "docker:clean": "docker stop byakuya-md && docker rm byakuya-md",
    "deploy:heroku": "git push heroku main",
    "deploy:railway": "railway deploy",
    "backup": "cp -r auth_info auth_info_backup_$(date +%Y%m%d_%H%M%S)",
    "backup:win": "xcopy auth_info auth_info_backup_%date:~-4,4%%date:~-10,2%%date:~-7,2%_%time:~0,2%%time:~3,2%%time:~6,2% /E /I /H"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "otaku",
    "anime",
    "manga",
    "multi-device",
    "pairing-code",
    "baileys",
    "whatsapp-api",
    "automation",
    "javascript",
    "nodejs"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
